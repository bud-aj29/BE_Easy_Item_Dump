  "ez_dump_button_panel": {
    "$pressed_button_name": "unset_button_name",
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ 30, 15 ],
    "layer": 6,
    "controls": [
      {
        "stack_panel_1": {
          "type": "stack_panel",
          "size": [ 15, 15 ],
          "offset": [ -7.5, 0 ],
	  "collection_name": "$item_location",
          "property_bag": {
            "#size": "$container_slot_count"
          },
          "factory": {
	    "control_name": "$factory_selection"
          },
          "bindings": [
            {
              "binding_type": "view",
              "source_property_name": "#size",
              "target_property_name": "#collection_length"
            }
          ]
        }
      },
      {
        "stack_panel_2": {
          "type": "stack_panel",
          "size": [ 15, 15 ],
          "offset": [ 7.5, 0 ],
	  "collection_name": "$item_location",
          "property_bag": {
            "#size": "$container_slot_count"
          },
          "factory": {
	    "control_name": "$factory_selection"
          },
          "bindings": [
            {
              "binding_type": "view",
              "source_property_name": "#size",
              "target_property_name": "#collection_length"
            }
          ]
        }
      },
      {
        "button@common_buttons.light_glyph_button": {
          "$default_glyph_color": "$light_glyph_hover_color",
          "layer": -1
        }
      }
    ]
  },

  "ez_dump_factory_chest": {
    "type": "panel",  
    "size": [ "100%", 0 ],
    "controls": [
      {
        "input_panel": {
          "type": "input_panel",
	  "visible": false,
          "size": [ "100%", "100%x" ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "consume_hover_events": false,
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.container_auto_place",
              "mapping_type": "pressed",
              "consume_event": false
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.container_auto_place",
              "mapping_type": "focused",
              "consume_event": false
            }
          ],
          "bindings": [
            {
	      "binding_type": "collection",
              "binding_name": "#item_id_aux",
              "binding_collection_name": "$item_location"
            },
            {
              "binding_type": "collection_details",
              "binding_collection_name": "$item_location"
            },
            {
              "binding_type": "view",
              "source_property_name": "(not (#item_id_aux=-1))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },

